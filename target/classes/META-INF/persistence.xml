<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="my-persistence-unit">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>org.example.models.Owners</class>
    <class>org.example.models.Cats</class>
    <class>org.example.models.Friends</class>

    <properties>
      <property name="hbm2ddl.auto" value="update"/>
      <property name="connection.url" value="jdbc:postgresql://localhost:5433/postgres"/>
      <property name="connection.driver_class" value="org.postgresql.Driver"/>
      <property name="connection.username" value="postgres"/>
      <property name="connection.password" value="postgres"/>
    </properties>
  </persistence-unit>
</persistence>
